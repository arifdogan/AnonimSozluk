<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container p-0">
            <a class="navbar-brand" href="#">Anonim Sözlük</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto mr-md-2">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa fa-random"></i> Rastgele
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-toggle="modal" data-target="#newMessageModal"><i class="fa fa-plus-circle"></i> Yeni Konu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-toggle="modal" data-target="#informationModal"><i class="fa fa-info-circle"></i> Hakkımızda</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <!-- Footer -->
    <footer class="py-2 bg-dark mt-xl-5">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
    <!--New Topic Page-->
    <div id="newMessageModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Yeni Konu</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12">
                        <input type="text" name="message" id="message" placeholder="Konu" class="form-control" />
                        <br />
                        <textarea name="message" id="messageArea" placeholder="Mesajınız" class="form-control" style="height: 500px;"></textarea>
                        <br />
                    </div>
                    <div class="col-md-12 text-center">
                        <button type="button" name="sendButton" id="sendButton" class="btn btn-primary">Gönder</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Information Page-->
    <div id="informationModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Dikkat!</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12">
                        <ul class="list-group">
                            @for (int i = 0; i < 10; i++)
                            {
                                <li class="offset-1">
                                    <p class="text-danger">@FakeData.TextData.GetSentences(FakeData.NumberData.GetNumber(2, 6))</p>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>
