
@{
    ViewBag.Title = "Index";
}

<!-- Page Content -->
<div class="container">
    <div class="row">
        @Html.Partial("_PartialTopic")
        <div class="col-lg-9">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-body">
                        <br />
                         Selected Topic
                        <hr style="margin-top:9px; margin-bottom:1px;" />
                    </div>
                </div>

                @for(int i = 0; i<20; i++)
                {
                    <div class="col-lg-12" id="anonimEntry">
                        <div class="card-body">
                            <p class="card-text">@FakeData.TextData.GetSentences(FakeData.NumberData.GetNumber(3,5))</p>
                            <p class="float-right text-primary text-sm-right small"><i class="fa fa-clock-o text-dark"></i> @DateTime.Now</p>
                        </div>
                        <hr />
                    </div>
                }
                <br />
                <br />
                <div class="col-lg-12">
                    <div class="form-group">
                        <textarea class="form-control" rows="5" id="comment" placeholder="İçinden geleni yaz lütfen"></textarea>
                    </div>
                    <button type="button" class="btn btn-warning float-right" style="color:white">Gönder</button>
                </div>
            </div>
        </div>
        <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->